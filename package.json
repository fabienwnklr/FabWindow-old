{
    "name": "fabwindow",
    "version": "1.0.0",
    "description": "Fabwindow is a simple window as modal or multiple with window manager",
    "main": "lib/",
    "type": "module",
    "scripts": {
        "start": "concurrently \"npm run build\" \"npm run doc\"",
        "build": "node esbuild",
        "build:dist": "npm run build:iife && npm run build:esm && npm run build:cjs",
        "build:iife": "esbuild lib/FabModalManager.ts lib/FabModal.ts --bundle --minify --outdir=build/iife --format=iife",
        "build:esm": "esbuild lib/FabModalManager.ts lib/FabModal.ts --bundle --minify --outdir=build/esm --format=esm",
        "build:cjs": "esbuild lib/FabModalManager.ts lib/FabModal.ts --bundle  --outdir=build/cjs --format=cjs",
        "prepare": "npm i && cd doc/ npm i",
        "doc": "cd website/ && npm run start",
        "doc:build": "cd website/ && npm run build",
        "test": "jest --config=jest.config.mjs"
    },
    "author": "Fabien Winkler",
    "license": "",
    "devDependencies": {
        "concurrently": "^7.4.0",
        "esbuild": "^0.15.10",
        "jest": "^29.1.2",
        "jest-environment-jsdom": "^29.1.2",
        "typescript": "^4.8.4"
    }
}
